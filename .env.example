# Slough.ai Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# SLACK CONFIGURATION
# ============================================

# Bot Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token

# App-Level Token (starts with xapp-)
# Required for Socket Mode
SLACK_APP_TOKEN=xapp-your-app-level-token

# Signing Secret
SLACK_SIGNING_SECRET=your-signing-secret

# OAuth Credentials (for installation flow)
SLACK_CLIENT_ID=your-client-id
SLACK_CLIENT_SECRET=your-client-secret

# ============================================
# DATABASE (PostgreSQL)
# ============================================

DATABASE_URL=postgres://postgres:postgres@localhost:5432/slough

# ============================================
# REDIS (Multi-DB: DB0=Broker, DB1=Backend, DB2=Cache)
# ============================================

REDIS_HOST=localhost
REDIS_PORT=6379
DEDUP_TTL_SECONDS=60

# ============================================
# LLM API
# ============================================

# OpenAI API Key (for GPT-4o + embeddings)
OPENAI_API_KEY=your-openai-api-key

# ============================================
# APPLICATION
# ============================================

ENVIRONMENT=development
LOG_LEVEL=DEBUG
APP_PORT=3000
