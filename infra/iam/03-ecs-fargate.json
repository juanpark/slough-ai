{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "ECSClusterAndService",
			"Effect": "Allow",
			"Action": [
				"ecs:CreateCluster",
				"ecs:DeleteCluster",
				"ecs:DescribeClusters",
				"ecs:CreateService",
				"ecs:UpdateService",
				"ecs:DeleteService",
				"ecs:DescribeServices",
				"ecs:ListServices",
				"ecs:ListTasks",
				"ecs:DescribeTasks",
				"ecs:RegisterTaskDefinition",
				"ecs:DeregisterTaskDefinition",
				"ecs:DescribeTaskDefinition",
				"ecs:ListTaskDefinitions",
				"ecs:PutClusterCapacityProviders",
				"ecs:UpdateClusterSettings"
			],
			"Resource": "*",
			"Condition": {
				"StringEquals": {
					"aws:RequestedRegion": "ap-northeast-2"
				}
			}
		},
		{
			"Sid": "ECSExecForMigration",
			"Effect": "Allow",
			"Action": ["ecs:ExecuteCommand"],
			"Resource": [
				"arn:aws:ecs:ap-northeast-2:*:cluster/slough-ai-cluster",
				"arn:aws:ecs:ap-northeast-2:*:task/slough-ai-cluster/*"
			]
		},
		{
			"Sid": "ECRRepositoryManagement",
			"Effect": "Allow",
			"Action": [
				"ecr:CreateRepository",
				"ecr:DeleteRepository",
				"ecr:DescribeRepositories",
				"ecr:PutLifecyclePolicy",
				"ecr:GetLifecyclePolicy",
				"ecr:PutImageScanningConfiguration",
				"ecr:SetRepositoryPolicy",
				"ecr:ListTagsForResource",
				"ecr:TagResource"
			],
			"Resource": "arn:aws:ecr:ap-northeast-2:*:repository/slough-ai"
		},
		{
			"Sid": "ECRImagePushPull",
			"Effect": "Allow",
			"Action": [
				"ecr:GetDownloadUrlForLayer",
				"ecr:BatchGetImage",
				"ecr:BatchCheckLayerAvailability",
				"ecr:PutImage",
				"ecr:InitiateLayerUpload",
				"ecr:UploadLayerPart",
				"ecr:CompleteLayerUpload",
				"ecr:DescribeImages",
				"ecr:ListImages"
			],
			"Resource": "arn:aws:ecr:ap-northeast-2:*:repository/slough-ai"
		},
		{
			"Sid": "ECRLogin",
			"Effect": "Allow",
			"Action": ["ecr:GetAuthorizationToken"],
			"Resource": "*"
		}
	]
}
